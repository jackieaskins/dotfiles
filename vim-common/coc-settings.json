{
  // Coc Preferences
  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "typescriptreact",
    "typescript",
    "javacsript",
    "javascriptreact"
  ],
  "coc.source.file.trimSameExts": [".ts", ".js", ".jsx", ".tsx"],

  // General Diagnostic Configuration
  "diagnostic.errorSign": "•",
  "diagnostic.warningSign": "•",
  "diagnostic.infoSign": "•",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.virtualTextPrefix": "‣ ",
  "diagnostic.checkCurrentLine": true,

  // JavaScript/TypeScript Configuration
  "javascript.format.enabled": false,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "javascript.validate.enable": false,
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.preferences.importModuleSpecifierEnding": "minimal",
  "javascript.suggest.completeFunctionCalls": false,
  "tsserver.npm": "/usr/local/bin/npm",
  "typescript.format.enabled": false,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "typescript.suggest.completeFunctionCalls": false,
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.importModuleSpecifierEnding": "minimal",
  "typescript.validate.enable": true,

  // Python
  "python.jediEnabled": false,

  // Snippets Configuration
  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescriptreact": ["typescript"]
  },
  "snippets.ultisnips.enable": false,
  "snippets.snipmate.enable": false,
  "snippets.textmateSnippetsRoots": [
    "~/dotfiles/vim-common/snippets"
  ],
  "snippets.loadFromExtensions": false,
  "snippets.priority": 99,

  // SolarGraph (Ruby) Configuration
  "solargraph.diagnostics": true,

  // Suggest
  "suggest.languageSourcePriority": 98,

  // YAML Configuration
  "yaml.format.enable": true
}
