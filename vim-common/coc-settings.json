{
  // Coc Preferences
  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "typescriptreact",
    "typescript",
    "javacsript",
    "javascriptreact"
  ],
  "coc.source.file.trimSameExts": [".ts", ".js", ".jsx", ".tsx"],

  "diagnostic-languageserver.filetypes": {
    "javascript": "eslint",
    "javascriptreact": "eslint",
    "typescript": "eslint",
    "typescriptreact": "eslint"
  },

  // General Diagnostic Configuration
  "diagnostic.errorSign": "•",
  "diagnostic.warningSign": "•",
  "diagnostic.infoSign": "•",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.virtualTextPrefix": "‣ ",
  "diagnostic.checkCurrentLine": true,

  // JavaScript/TypeScript Configuration
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "javascript.validate.enable": false,
  "javascript.preferences.importModuleSpecifier": "relative",
  "tsserver.npm": "/usr/local/bin/npm",
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.validate.enable": true,

  // Python
  "python.jediEnabled": false,

  // Snippets Configuration
  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"],
    "typescriptreact": ["typescript", "javascriptreact"]
  },
  "snippets.userSnippetsDirectory": "~/dotfiles/vim-common/snippets",

  // SolarGraph (Ruby) Configuration
  "solargraph.diagnostics": true,

  // YAML Configuration
  "yaml.format.enable": true
}
