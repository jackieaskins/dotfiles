# https://github.com/koekeishiya/yabai/wiki/Configuration#configuration-file

yabai -m config layout bsp

yabai -m config top_padding 6
yabai -m config bottom_padding 6
yabai -m config left_padding 6
yabai -m config right_padding 6
yabai -m config window_gap 6

yabai -m config window_border on
yabai -m config active_window_border_color 0xFF9EC183

yabai -m config mouse_follows_focus off
yabai -m config focus_follows_mouse off
yabai -m config window_origin_display cursor

yabai -m rule --add app="^Google Chrome$" title="^Picture in Picture$" manage=off
yabai -m rule --add app="^TV$" manage=off border=off
yabai -m rule --add app="^System Preferences$" manage=off border=off
yabai -m rule --add app="^Spotify$" manage=off
yabai -m rule --add app="^Stats$" manage=off border=off
yabai -m rule --add app="^Karabiner" manage=off
yabai -m rule --add app="^Alfred Preferences$" manage=off
