[include]
  path = ~/dotfiles/delta/base.gitconfig

[advice]
  skippedCherryPicks = false
[branch]
  sort = -committerdate
[commit]
  verbose = true
[core]
  excludesfile = ~/dotfiles/gitignore_global
[diff]
  colorMoved = default
[merge]
  conflictstyle = diff3
[pull]
  rebase = true
  verbose = true
[rerere]
  enabled = true
[rebase]
  autoStash = true
