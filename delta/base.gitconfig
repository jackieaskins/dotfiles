[include]
  path = ./themes/catppuccin.gitconfig

[core]
  pager = delta
[interactive]
  diffFilter = delta --color-only

[delta]
  features = catppuccin-macchiato
  navigate = true
  commit-style = yellow
  commit-decoration-style = yellow box ul
  file-style = purple
  file-decoration-style = purple ul ol
  hunk-header-decoration-style = blue box
  hunk-header-file-style = blue
  hunk-header-style = file syntax
  true-color = always
