[include]
  path = ./themes/catppuccin.gitconfig

[core]
  pager = delta
[interactive]
  diffFilter = delta --color-only

[delta]
  features = catppuccin-mocha
  navigate = true
  commit-style = yellow
  commit-decoration-style = yellow box ul
  file-style = blue
  file-decoration-style = blue ul
  hunk-header-style = omit
  true-color = always
